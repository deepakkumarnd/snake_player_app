<% if @stats.present? %>
  <%= turbo_stream.update "game-stats" do %>
    <div>
      <div>
        <span>Games</span>&nbsp;<span><%= @stats['games'] %></span>
      </div>
      <div>
        <span>Moves</span>&nbsp;<span><%= @stats['history'] %></span>
      </div>
      <div>
        <span>Avg Loss</span>&nbsp;<span><%= @stats['loss_avg'] %></span>
      </div>
      <div>
        <span>Epsilon</span>&nbsp;<span><%= @stats['epsilon'] %></span>
      </div>
    </div>
  <% end %>
<% end %>